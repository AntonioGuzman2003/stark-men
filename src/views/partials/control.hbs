<script>
$(document).ready(function(){
    // Prevenir el comportamiento predeterminado de los enlaces del menú
    $('.category_item').click(function(e){
        e.preventDefault(); // Prevenir la acción predeterminada del enlace
        var catProduct = $(this).attr('category');
        console.log(catProduct);
        
        // AGREGANDO CLASE ACTIVE AL ENLACE SELECCIONADO
        $('.category_item').removeClass('ct_item-active');
        $(this).addClass('ct_item-active');
        
        // OCULTANDO PRODUCTOS =========================
        $('.product-item').css('transform', 'scale(0)');
        function hideProduct(){
            $('.product-item').hide();
        } setTimeout(hideProduct,400);
        
        // MOSTRANDO TODOS LOS PRODUCTOS =======================
        function showProduct(){
            // Mostrar todos los productos si se clickeó en "Mostrar Todo"
            if (catProduct === "all") {
                $('.product-item').show();
                $('.product-item').css('transform', 'scale(1)');
            } else {
                // Mostrar solo los productos de la categoría seleccionada
                $('.product-item').hide();
                $('.product-item[category="'+catProduct+'"]').show();
                $('.product-item[category="'+catProduct+'"]').css('transform', 'scale(1)');
            }
        } setTimeout(showProduct,400);
    });
    
    // Capturar clic en cada producto
    $('.product-item a').click(function(e){
        e.preventDefault(); // Prevenir la acción predeterminada del enlace
        
        // Obtener detalles del producto
        var productName = $(this).text();
    var productPrice = $(this).siblings('p').text().trim(); // Seleccionar el precio dentro del contenedor .product-item
        
        // Redirigir a la página de ventas con los detalles del producto
        window.location.href = "/ventas?producto=" + encodeURIComponent(productName) + "&precio=" + encodeURIComponent(productPrice);
    });
});
</script>
